<h1>Recipe List</h1>

<div>
	<% @recipes.each do |recipe|%>
		<h2>
			<%=  link_to  recipe.name, recipe_path(recipe.id) %>
		</h2>

		<p>	<%= recipe.description%> </p>

		<%= button_to "REMOVE", recipe_path(recipe.id),  method: :delete %>
	<% end %>
</div>

<div>
	<%= link_to "Create Recipe", new_recipe_path %>
</div>