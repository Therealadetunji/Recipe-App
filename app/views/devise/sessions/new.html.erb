<h3 class="heading-3">Log in</h3>

<div class="w-full max-w-md my-5">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-main") do |f| %>
  <div class="field mb-6">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input-text" %>
  </div>

  <div class="field mb-6">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input-text" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-3">
    <%= f.submit "Log in", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
