<h3 class="h3">ShoppingLists</h3>

<div class="d-flex justify-content-around my-5">
  <p>Amount of food items to buy: <span class="badge bg-secondary"><%= @list.length %> <span> </p>
  <p>Total value of food needed: <span class="badge bg-secondary">$ <%= @total_amount %></span></p>
</div>

<div class="my-2">
  <table class="table">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @list.each do |item| %>
        <tr>
          <td><%= item[0] %></td>
          <td><%= item[1] %></td>
          <td>$ <%= item[2] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
